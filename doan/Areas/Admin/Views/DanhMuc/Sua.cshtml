@model doan.Models.DanhMuc
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chỉnh sửa danh mục</h2>
    </div>
    <form method="post" asp-action="Sua">
        <div class="form-group">
            <label asp-for="TenDanhMuc">Tên danh mục</label>
            <input type="text" class="form-control" asp-for="TenDanhMuc">
        </div>
        <div class="form-group col-md-6">
            <label class="control-label">Hình ảnh</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <button class="btn btn-success" type="button" onclick="openDialog()">Chọn hình ảnh</button>
                </div>
                <input type="text" class="form-control" asp-for="AnhMinhHoa" id="file_input" aria-describedby="button-addon2">
            </div>
        </div>
      
        <button type="submit" class="btn btn-primary">Sửa</button>
    </form>
</main>

@{
    var summerNote = new doan.Areas.Admin.Models.SummerNote("#Content");
    <partial name="_SummerNote" model="summerNote" />
}