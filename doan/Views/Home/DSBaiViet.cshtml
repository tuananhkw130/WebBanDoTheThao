@section Styles {
	<link rel="stylesheet" type="text/css" href="~/styles/main_styles.css">
	<link rel="stylesheet" type="text/css" href="~/styles/responsive.css">
}

@section Scripts {
	<script src="~/js/custom.js"></script>
}


@model IList<BaiViet>


<div class="blogs" style="margin-top: 230px;">
	<div class="container">
		<div class="row">
			@*<div class="col-lg-12">
					<div class="breadcrumbs d-flex flex-row align-items-center">
						<ul>
							<li><a href="/">Trang chủ</a></li>
							<li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Tất cả các sản phẩm</a></li>
						</ul>
					</div>
			</div>*@
			<div class="col text-center">
				<div class="section_title">
					<h2>Danh Sách Bài Viết</h2>
				</div>
			</div>
		</div>
		<div class="row blogs_container">
			@foreach(var item in Model){
				<div style="margin-bottom:35px;" class="col-lg-4 blog_item_col">
					<div class="blog_item">
						<div class="blog_background" style="background-image:url(@item.Anh)"></div>
						<div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
							<h4 class="blog_title">@item.TieuDe</h4>
							<span class="blog_meta">@item.NgayTao.ToString()</span>
							<a class="blog_more" asp-controller="Home" asp-action="BaiVietChiTiet" asp-route-id="@item.ID">Xem thêm</a>
						</div>
					</div>
				</div>
			}
			
		</div>
	</div>
</div>


<div class="benefit">
	<div class="container">
		<div class="row benefit_row">
			<div class="col-lg-3 benefit_col">
				<div class="benefit_item d-flex flex-row align-items-center">
					<div class="benefit_icon"><i class="fa fa-truck" aria-hidden="true"></i></div>
					<div class="benefit_content">
						<h6>Miễn phí vận chuyển</h6>
						<p>Hệ thống giao hàng trên toàn quốc</p>
					</div>
				</div>
			</div>
			<div class="col-lg-3 benefit_col">
				<div class="benefit_item d-flex flex-row align-items-center">
					<div class="benefit_icon"><i class="fa fa-money" aria-hidden="true"></i></div>
					<div class="benefit_content">
						<h6>Thanh toán khi nhận hàng</h6>
						<p>Kiểm tra hàng khi thanh toán</p>
					</div>
				</div>
			</div>
			<div class="col-lg-3 benefit_col">
				<div class="benefit_item d-flex flex-row align-items-center">
					<div class="benefit_icon"><i class="fa fa-undo" aria-hidden="true"></i></div>
					<div class="benefit_content">
						<h6>Đổi trả hàng </h6>
						<p>Xử lý đơn trong vòng 10 ngày</p>
					</div>
				</div>
			</div>
			<div class="col-lg-3 benefit_col">
				<div class="benefit_item d-flex flex-row align-items-center">
					<div class="benefit_icon"><i class="fa fa-clock-o" aria-hidden="true"></i></div>
					<div class="benefit_content">
						<h6>Mở cửa các ngày trong tuần</h6>
						<p>8SA - 09CH</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>